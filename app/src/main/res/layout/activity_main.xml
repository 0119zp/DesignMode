            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="button22"
            android:text="亨元模式" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="button23"
            android:text="备忘录模式" />

    </LinearLayout>

</LinearLayout>
